<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".MainActivity">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/peanutCircle" android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/circular_gradient_background"
        android:clickable="true"
        android:focusable="true"
        android:contentDescription="@string/app_name"
        android:elevation="12dp"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/peanutText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Peanut"
        android:textColor="@android:color/black"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/peanutCircle"
        app:layout_constraintEnd_toEndOf="@+id/peanutCircle"
        app:layout_constraintStart_toStartOf="@+id/peanutCircle"
        app:layout_constraintTop_toTopOf="@+id/peanutCircle" />

</androidx.constraintlayout.widget.ConstraintLayout>